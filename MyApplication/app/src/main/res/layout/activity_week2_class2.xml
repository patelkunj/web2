<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".week2_class2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="253dp"
        android:layout_gravity="center"
        android:src="@drawable/charizard" />

    <RadioGroup
        android:layout_width="132dp"
        android:layout_height="353dp"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/Bulbasaur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulbasaur"
            android:onClick="rbClick"/>

        <RadioButton
            android:id="@+id/chrizard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chrizard" />

        <RadioButton
            android:id="@+id/chamander"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chamander" />

        <RadioButton
            android:id="@+id/wartotie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wartotie"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/blastoties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blastoties" />

        <RadioButton
            android:id="@+id/butterfree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butterfree" />
    </RadioGroup>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Toasting Click Event Test"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>

</LinearLayout>